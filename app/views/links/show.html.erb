<div class="d-flex flex-row justify-content-around flex-wrap">
  <div class="card text-center">
    <h3> <%= @link.title %></h3>
    <p><a href="<%= @link.url %>"><%= @link.url %></a> <%= image_tag "open_link_icon.png", class:"icon" %></p>
    <img src='<%=@link.image_path %>' class="image"/>
    <p><%=@link.description %></p>
    <% @link.tags.each do |tag| %>
      <div class="tag"><span class="tag-bg"> <%= tag.title %> </span> </div>
    <% end %>
<%= link_to "Show All Links", links_path %>
</div>
